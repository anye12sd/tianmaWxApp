/* pages/articleList/articleList.wxss */
page{
  height: 100%;
  background: #f9f9f9;
}
.container{
  height: 100%;
  background: #f9f9f9;
}
.scroll-view-box{
  position: fixed;
  top:0;
  left:0;
  right: 0;
  height: 100rpx;
  background: #fff;
  line-height: 100rpx;
  font-size: 28rpx;
  z-index: 100;
}
.scroll-view-title{
  display: inline-block;
  margin: 0 30rpx
}
.scroll-view-title.active{
  border-bottom: 2px solid #e60012;
  color: #e60012;
}

.swiper-box{
  margin-top: 160rpx;
  width: 100%;
  height: 462rpx;
  border-radius: 8rpx;
}
.swiper swiper swiper-item{
  border-radius: 8rpx;
}
.swiper{
  height: 100%;
  position: relative;
  z-index: 10;
  border-radius: 8rpx;
  margin: 0 30rpx;
}
.swiper swiper{
  height: 100%;
  border-radius: 8rpx;
}
.swiper-item{
  border-radius: 8rpx;
}
.swiper-img{
  width: 100%;
  height: 462rpx;
  border-radius: 8px;
}
/*用来包裹所有的小圆点  */

.dots {
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  height: 36rpx;
  position: absolute;
  bottom: 20rpx;
}

.dots-box{
  margin: 0 auto;
}

/*未选中时的小圆点样式 */

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: white;
}

/*选中以后的小圆点样式  */

.dot.active {
  width: 32rpx;
  height: 16rpx;
  background-color: #e60012;
  border-radius: 30rpx;
}


.article-box{
  
}
.pt160{
  margin-top: 160rpx;
}
.article-children-title-box{
  background: #fff;
  border-radius: 20rpx;
  margin: 0 30rpx;
  margin-top: 60rpx;
}
.article-children-title{
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color:#969696;
  border-bottom: 1px solid #f5f5f5;
}
.article .ql-align-justify{
  text-indent: 68rpx;
  text-align: justify;
  margin-top: 100rpx;
}
.article rich-text p img{
  width: 100vw
}
.article-children-content{
  padding: 30rpx 40rpx;
  padding-left: 0;
  margin-left: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #f6f6f6;
  position: relative;
}
.article-children-content::after{
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 2px 2px 0 0;
  border-color: #969696;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  right: 40rpx;
  top: 44rpx
}
.article-content{
  background: #fff;
  border-radius: 20rpx;
  margin: 0 30rpx;
  margin-top: 60rpx;
}
.article{
  padding: 30rpx;
  text-align: justify;
}

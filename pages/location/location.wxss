/* pages/location/location.wxss */
page{
  background: #fff;
}
.container{
  height: 100%;
  background: #fff;
}
.input-search-box{
  padding: 30rpx 40rpx;
  background: #fff;
  font-size: 28rpx;
  position: relative;
}
.input-search-box image{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left:56rpx;
  top:40rpx
}
.input-search{
  padding: 10rpx 0;
  padding-left: 70rpx;
  background: #f9f9f9;
}
.city-list-box{
  position: absolute;
  top: 120rpx;
  max-height: 400rpx;
  background: #fff;
  left: 0;
  right: 0;
  overflow-y: auto;
  padding-left: 40rpx;
}
.city-list{
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #e5e5e5;
}
.location-city{
  
}
.location-city .title, .hot-select-city .title{
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  background: #f9f9f9;
}
.location-city-name{
  padding: 0 40rpx;
  line-height: 78rpx;
  background: #fff;
}
.hot-select-city{
  padding-bottom: 18rpx;
}
.hot-select-box{
  padding: 0 40rpx;
  background: #fff;
}
.hot-city{
  text-align: center;
  background: #f9f9f9;
  padding: 14rpx 0;
  margin-top: 18rpx;
  font-size: 30rpx;
  width:calc(25% - 20rpx)
}
.reLocation{
  float: right;
  color: #376ee8;
  font-size: 28rpx;
  padding-right: 40rpx;
  line-height: 78rpx;
}